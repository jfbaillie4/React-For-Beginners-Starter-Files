/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform translate(-120%)
  transition 0.5s
  max-height 0
  padding 0 !important
  &.order-enter-active
    transform translatex(0)
    padding 2rem 0 !important
    max-height 60px
.order-exit
  transition 0.5s
  transform transalteX(0)
  &.order-exit-active
    transform translateX(120%)
    padding 0 !important

.count-enter
  transition .5s
  transform translateY(100%)
  &.count-enter-active
    transform translate(0)

.count-exit
  transform translateY(0)
  transition .5s
  position absolute
  left 0
  right 0
  &.count-exit-active
    transform translateY(-100%)